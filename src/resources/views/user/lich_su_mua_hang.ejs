<%- include('headerUser.ejs') %>

    <div class="container" style="margin-top: 50px; margin-bottom: 150px">
        <div class="row">
            <div class="col-lg-3">
                <div class="link_order">
                    <div class="user_order">
                        <p>Manh</p>
                    </div>
                    <ul class="">
                        <li class="item_"><a href="/order">Dơn mua hàng</a></li>
                        <li class="item_ mt-3"><a>Đơn bảo hành</a></li>
                        <li class="item_ mt-3 pb-3"><a href="/lich_su_mua_hang">Lịch sử mua hàng</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="" id="">
                    <% if (don_mua_hang.length> 0) {
                        var hasActiveOrder = false;
                        don_mua_hang.forEach(function(don_mua_hang_item, index) {
                        if (don_mua_hang_item.trang_thai === 6) {
                        hasActiveOrder = true;
                        %>
                        <div class="row">
                            <div class="">
                                <p class="user_order text-start">
                                </p>
                            </div>
                            <% var hasActiveProducts=false; if (data && data.length> 0) {
                                data.forEach(function(order, index) {
                                if (user.id == order.khach_hang_id && order.don_mua_hang_id === don_mua_hang_item.id) {
                                hasActiveProducts = true;
                                %>
                                <div class="row">
                                    <div class="col-lg-3">
                                        <img style="width: 150px; height: 100px;" class="img-thumbnail"
                                            src="/imgUpload/<%= order.hinh_anh %>">
                                    </div>
                                    <div class="col-lg-6">
                                        <p>Thông tin sản phẩm</p>
                                        <p>
                                            <%= order.ten_san_pham %> - <%= order.mau_sac %> - <%= order.dung_luong %> -
                                                        x<%= order.so_luong %>
                                        </p>
                                    </div>
                                    <div class="col-lg-3">
                                        <p>Giá</p>
                                        <p>
                                            <%= order.gia_ban %>
                                        </p>
                                        <p>Tổng tiền: <%= order.tong_tien %>
                                        </p>
                                    </div>
                                </div>
                                <% } }); } if (!hasActiveProducts) { %>
                                    <p>Không có dữ liệu</p>
                                    <% } %>
                                        <div>
                                            <p class="text-end mx-2">Tổng tiền thanh toán: <%=
                                                    don_mua_hang_item.tong_tien_thanh_toan %>
                                            </p>

                                        </div>
                                        <div class="text-end">
                                            <a href="#" class="btn btn-outline-success mx-2 mb-3">Mua lại</a>
                                        </div>
                        </div>
                        <% } }); if (!hasActiveOrder) { %>
                            <p>Không có dữ liệu</p>
                            <% } } else { %>
                                <p>Không có dữ liệu</p>
                                <% } %>
                </div>

            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

    <%- include('footerUser.ejs') %>