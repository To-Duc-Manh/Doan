<%- include('headerUser.ejs') %>

    <div class="container" style="margin-top: 150px; margin-bottom: 150px">
        <div>
            <h3 class="text-start">ĐẶT HÀNG </h3>
            <p>Địa chỉ: <span id="ho_ten">
                    <%= user.ho_ten %>
                </span> - <span id="so_dien_thoai">
                    <%= user.so_dien_thoai %>
                </span> - <span id="dia_chi">
                    <%= user.dia_chi %>
                </span></p>
            <textarea id="ghi_chu" style="width: 100%;" placeholder="Ghi chu"></textarea>
        </div>

        <div>
            <table style="margin-top: 50px;"
                class="table table-PW table-striped table-hover table-borderless align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="text-center">Hình ảnh</th>
                        <th>Sản phẩm</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    <tr>
                        <td class="text-center">
                            <img style="width: 150px; height: 100px;" class="img-thumbnail"
                                src="/imgUpload/<%= product_datHang.hinh_anh %>">
                        </td>
                        <td>
                            <%= product_datHang.ten_san_pham %>
                        </td>
                        <td id="gia_ban">
                            <%= product_datHang.gia_ban %>
                        </td>
                        <td>
                            <div>
                                <button onclick="decreaseQuantity()">-</button>
                                <span id="so_luong">
                                    <%= so_luong %>
                                </span>
                                <button onclick="increaseQuantity()">+</button>
                            </div>
                        </td>
                        <td><span id="tong_gia">
                                <%= product_datHang.gia_ban * so_luong %>
                            </span></td>
                    </tr>
                </tbody>
            </table>
            <div class="row mt-5">
                <div class="col-lg-4">
                    <p>PHƯƠNG THỨC THANH TOÁN</p>
                    <hr>
                    <select id="hinh_thuc_thanh_toan">
                        <option value="1">Thanh toán khi nhận hàng</option>
                        <option value="2">Thanh toán bằng ngân hàng</option>
                    </select>
                </div>
                <div class="col-lg-4"></div>
                <div class="col-lg-4">
                    <p>TỔNG TIỀN</p>
                    <hr>
                    <p>Tổng phụ: ...</p>
                    <p>Phí vận chuyển: ...</p>
                    <p>Tổng tiền:</p>
                    <p id="tong_tien_thanh_toan"></p>

                    <button class="btn btn-primary" onclick="datHang()">ĐẶT HÀNG</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        var so_luong_element = document.getElementById("so_luong");
        var tong_gia_element = document.getElementById("tong_gia");
        var gia_ban = '<%= product_datHang.gia_ban %>';

        // Hàm cập nhật giá bán khi số lượng thay đổi
        function updateTotalPrice() {
            var so_luong = parseInt(so_luong_element.innerText);
            var tong_gia = gia_ban * so_luong;
            tong_gia_element.innerText = tong_gia;
        }

        // Hàm giảm số lượng
        function decreaseQuantity() {
            var so_luong = parseInt(so_luong_element.innerText);
            if (so_luong > 1) {
                so_luong--;
                so_luong_element.innerText = so_luong;
                updateTotalPrice();
            }
        }

        // Hàm tăng số lượng
        function increaseQuantity() {
            var so_luong = parseInt(so_luong_element.innerText);
            so_luong++;
            so_luong_element.innerText = so_luong;
            updateTotalPrice();
        }

        // Hàm gửi dữ liệu đặt hàng đến máy chủ
        function datHang() {
            var hoTen = document.getElementById("ho_ten").innerText;
            var soDienThoai = document.getElementById("so_dien_thoai").innerText;
            var diaChi = document.getElementById("dia_chi").innerText;
            var ghiChu = document.getElementById("ghi_chu").value;
            var hinhThucThanhToan = document.getElementById("hinh_thuc_thanh_toan").value;
            var soLuong = parseInt(document.getElementById("so_luong").innerText);
            var giaBan = parseFloat(document.getElementById("gia_ban").innerText);
            var tongGia = parseFloat(document.getElementById("tong_gia").innerText);
            var tong_tien_thanh_toan = parseFloat(document.getElementById("tong_tien_thanh_toan").innerText);
            var san_pham_id = '<%= product_datHang.chi_tiet_id %>'
            console.log(soDienThoai)
            // Gửi dữ liệu đến máy chủ bằng Ajax hoặc fetch API
            // Ví dụ sử dụng fetch API
            fetch('/dat_hang2', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    hoTen: hoTen,
                    soDienThoai: soDienThoai,
                    diaChi: diaChi,
                    ghiChu: ghiChu,
                    hinhThucThanhToan: hinhThucThanhToan,
                    soLuong: soLuong,
                    tongGia: tongGia,
                    giaBan: giaBan,
                    tong_tien_thanh_toan: tong_tien_thanh_toan,
                    san_pham_id: san_pham_id,
                })
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Có lỗi khi đặt hàng');
                    }
                    return response.json();
                })
                .then(data => {
                    console.log('Đặt hàng thành công: ', data);
                    alert('Đặt hàng thành công!');
                })
                .catch(error => {
                    console.error('Đặt hàng thất bại: ', error);
                    alert('Đặt hàng thất bại!');
                });
        }
    </script>

    <%- include('footerUser.ejs') %>