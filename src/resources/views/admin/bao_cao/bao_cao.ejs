<%- include('../header.ejs') %>
    <%- include('../aside.ejs') %>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">

            <table style="margin-top: 50px;" class="table table-PW table-hover table-borderless align-middle">
                <thead class="table-light">
                    <caption> Báo cáo sản phẩm</caption>
                    <tr style="background-color: #e9e9e9;">
                        <th>STT</th>
                        <th class="text-center">hình ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Màu sắc</th>
                        <th>Dung lượng</th>
                        <th>Số lượng nhập</th>
                        <th>Số lượng bán</th>
                        <th>Số lượng còn lại</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    <% if (data && data.length> 0) { %>
                        <% data.forEach(function (bao_cao, index) { %>
                            <tr>
                                <td>
                                    <%= index + 1 %>
                                </td>
                                <td class="text-center">
                                    <img style="width: 150px; height: 100px;" class="img-thumbnail"
                                        src="/imgUpload/<%= bao_cao.hinh_anh %>">
                                </td>
                                <td>
                                    <%= bao_cao.ten_san_pham %>
                                </td>
                                <td>
                                    <%= bao_cao.ten_mau_sac %>
                                </td>
                                <td>
                                    <%= bao_cao.ten_dung_luong %>
                                </td>
                                <td>
                                    <%= bao_cao.so_luong_nhap %>

                                </td>
                                <td>
                                    <%= bao_cao.so_luong_ban %>

                                </td>
                                <td>
                                    <%= bao_cao.so_luong_con_lai %>
                                </td>
                            </tr>
                            <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="7">Không có dữ liệu</td>
                                    </tr>
                                    <% } %>

                </tbody>
            </table>
        </div>

        <%- include('../footer.ejs') %>