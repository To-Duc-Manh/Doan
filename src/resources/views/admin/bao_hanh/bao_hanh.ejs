<%- include('../header.ejs') %>
    <%- include('../aside.ejs') %>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <div class="row">
                <div class="col-md-6">
                    <button type="button" class="btn btn-outline-primary mt-2 mx-2" data-bs-toggle="modal"
                        data-bs-target="#staticBackdrop">
                        Thêm đơn bảo hành
                    </button>
                </div>
                <div class="col-md-6 mt-2 ">
                    <form action="/admin/search_danh_muc" id="combined-form" method="get" class="sidebar-form_1 mx-2">
                        <div class="input-group mb-3" style="width: 80%;">
                            <input type="text" name="name" class="form-control"
                                placeholder="Nhập đơn bảo hành bạn muốn tìm kiếm" aria-label="Recipient's username"
                                aria-describedby="button-addon2">
                            <button class="btn btn-outline-secondary" type="submit" id="button-addon2"><i
                                    class="fa fa-search"></i></button>
                        </div>
                    </form>
                </div>
                <div class="modal fade " id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false"
                    tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-scrollable">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="staticBackdropLabel">Thêm đơn bảo hành</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form method="POST" action="/admin/add_danh_muc" class="row g-3 needs-validation"
                                    novalidate>
                                    <div class="col-md-6">
                                        <label for="validationCustom01" class="form-label">Tên đơn bảo hành</label>
                                        <input type="text" name="ten_danh_muc" class="form-control"
                                            id="validationCustom01" required>
                                        <div class="invalid-feedback">
                                            Hãy nhập tên đơn bảo hành
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <button class="btn btn-primary" type="submit">Submit form</button>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary">Understood</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <table style="margin-top: 50px;"
                class="table table-PW table-striped table-hover table-borderless align-middle">
                <thead class="table-light">
                    <caption>Danh sach đơn bảo hành </caption>
                    <tr>
                        <th>STT</th>
                        <th>Tên sản phẩm</th>
                        <th>Loại bảo trì</th>
                        <th>Tiêu đề</th>
                        <th>Ngày bắt đầu</th>
                        <th>Ngày hoàn thành</th>
                        <th>Ngày chi phí</th>
                        <th>Ngày trạng thái</th>
                        <th>Tác vụ</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    <% if (data && data.length> 0) { %>
                        <% data.forEach(function (bao_hanh, index) { %>
                            <tr>
                                <td>
                                    <%= index + 1 %>
                                </td>
                                <td>
                                    <%= bao_hanh.ten_san_pham %>
                                </td>
                                <td>
                                    <%= bao_hanh.loai_bao_hanh %>
                                </td>
                                <td>
                                    <%= bao_hanh.tieu_de %>
                                </td>
                                <td>
                                    <%= bao_hanh.ngay_bat_dau %>
                                </td>
                                <td>
                                    <%= bao_hanh.ngay_ket_thuc %>
                                </td>
                                <td>
                                    <%= bao_hanh.chi_phi %>
                                </td>
                                <td>
                                    <% if (bao_hanh.trang_thai===1) { %>
                                        <button class="btn btn-outline-secondary btn-sm"> Chờ xác nhận</button>
                                        <% } else if (bao_hanh.trang_thai===2) { %>
                                            <button class="btn btn-outline-primary btn-sm">Đã xác nhận</button>
                                            <% } else if (bao_hanh.trang_thai===3) { %>
                                                <button class="btn btn-outline-warning btn-sm">Đang giao</button>
                                                <% } else if (bao_hanh.trang_thai===4) { %>
                                                    <button class="btn btn-outline-success btn-sm">Đã giao</button>
                                                    <% } %>
                                </td>
                                <td>
                                    <div class="d-flex ">
                                        <a href=""
                                            class="btn btn-outline-success btn-sm mx-1">Sửa</a>
                                            <a href=""
                                            class="btn btn-outline-success btn-sm mx-1">CT</a>
                                        <a href=""
                                            class="btn btn-outline-danger btn-sm mx-1">Xóa</a>
                                    </div>
                                </td>
                            </tr>
                            <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="7">Không có dữ liệu</td>
                                    </tr>
                                    <% } %>

                </tbody>
            </table>
        </div>
        <!-- /.content-wrapper -->
        <%- include('../footer.ejs') %>